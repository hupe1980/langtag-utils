{
  "name": "langtag-utils",
  "description": "A collection of useful utilities for bcp47 and rfc4647",
  "version": "2.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hupe1980/langtag-utils"
  },
  "keywords": [
    "bcp47",
    "rfc4647",
    "langtag",
    "subtag",
    "language",
    "lng",
    "lang",
    "typescript"
  ],
  "main": "lib/index.js",
  "module": "lib.es6/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "lib.es6"
  ],
  "scripts": {
    "test": "jest --env=jsdom",
    "test:watch": "jest --watch --env=jsdom",
    "lint": "eslint '*/**/*.{ts,tsx}' --report-unused-disable-directives",
    "build": "npm run build:cjs && npm run build:es6",
    "build:cjs": "rimraf lib && tsc",
    "build:es6": "rimraf lib.es6 && tsc --module es6 --outdir lib.es6",
    "build:watch": "rimraf lib && tsc -w",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  }
}
